.container {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.header {
    width: 100%;
    height: 110rpx;
    background: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
}

.header .search {
    width: 690rpx;
    height: 64rpx;
    background: #f7f7f7;
    border-radius: 32rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.search image {
    width: 33rpx;
    height: 30rpx;
    margin-right: 10rpx;
}

.content {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #f7f7f7;
}

.sub-title {
    width: 100%;
    height: 34rpx;
    display: flex;
    justify-content: center;
    margin-top:30rpx;
}

.sub-title image {
    width: 107rpx;
    height: 34rpx;
}

.book-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 28rpx 96rpx;
}

.book-list .item {
    margin-bottom: 20rpx;
}